<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".user.UserFragment">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/posts_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:text="@string/text_your_posts"
        android:textColor="@android:color/black"
        android:drawableTint="@android:color/black"
        android:drawableLeft="@drawable/outline_article_24"
        android:drawableRight="@drawable/round_chevron_right_24"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/edit_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:text="@string/text_edit_profile"
        android:textColor="@android:color/black"
        android:drawableTint="@android:color/black"
        android:drawableLeft="@drawable/outline_create_24"
        android:drawableRight="@drawable/round_chevron_right_24"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="@string/text_logout"
        android:textColor="@android:color/black"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/delete_account_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="Delete account"
        android:textColor="@android:color/black"
        android:textAllCaps="false"/>
</LinearLayout>